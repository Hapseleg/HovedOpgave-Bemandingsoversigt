<h1>Bemandingsoversigt</h1>
<form method="GET" action="bemandingsOversigtTid" id="tidform">
    <select name="month" id="month" form="tidform">
        <option value="1">Januar</option>
        <option value="2">Februar</option>
        <option value="3">Marts</option>
        <option value="4">April</option>
        <option value="5">Maj</option>
        <option value="6">Juni</option>
        <option value="7">Juli</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">Oktober</option>
        <option value="11">November</option>
        <option value="12">December</option>
    </select>
    <input type="number" name="year" id="year" placeholder="År">
    {{!-- <input type="button" id="getTimeData" value="Hent data"> --}}
</form>

<button type="button" id="toggleWeeks" class="toggledUsed">Se timer til rådighed for uge</button>
<div>
    <table class="table table-light" id="opgaveloserTable">
        <thead>
            <tr id="firstHead">
                <th colspan="3"></th>
                {{!-- <th colspan="6" id="thMonth1">Januar</th>
                <th colspan="6" id="thMonth2">Januar</th> --}}
            </tr>
            <tr id="secondHead">
                {{!-- <th>Opgaveløser id</th> --}}
                <th>Opgaveløser</th>
                {{!-- <th>Opgave id</th> --}}
                <th>Opgave</th>
                <th>KonsulentProfil</th>
                {{!-- <th>Uden pause</th>
                <th>Med pause</th> --}}
            </tr>
        </thead>
        <tbody>
            {{#each opgaveloser}}
                <tr id="opgaveloserRow" class="opgaveloser">
                    <input type="hidden" id="{{@index}}" idName="opgaveloserId" value={{this.opgaveloserId}}>
                    <input type="hidden" id="{{@index}}" idName="opgaveloserOpgaveId" value={{this.opgaveloserOpgaveId}}>

                    {{!-- <td value={{this.opgaveloserId}}>{{this.opgaveloserId}}</td> --}}
                    <td value={{this.opgaveloserId}}>{{this.fornavn}} {{this.efternavn}}</td>
                    {{!-- <td value={{this.opgaveId}}>{{this.opgaveId}}</td> --}}
                    <td class="opgaveTd" value={{this.opgaveId}}>{{this.opgaveNavn}}</td>
                    <td value={{this.opgaveloserKonsulentProfilId}}>{{this.konsulentProfilNavn}}</td>
                    {{!-- <td class="usedHoursPercentNoBreak">%</td>
                    <td class="usedHoursPercentWithBreak">%</td> --}}
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>


<script src="/js/clientbemandingsoversigt.js"></script>