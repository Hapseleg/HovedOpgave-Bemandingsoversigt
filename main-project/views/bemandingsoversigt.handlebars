<h1>Bemandingsoversigt</h1>

<form method="GET" action="bemandingsOversigtTid" id="tidform">
    <label for="month">År:</label>
    <select name="month" id="month" form="tidform">
        <option value="1">Januar</option>
        <option value="2">Februar</option>
        <option value="3">Marts</option>
        <option value="4">April</option>
        <option value="5">Maj</option>
        <option value="6">Juni</option>
        <option value="7">Juli</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">Oktober</option>
        <option value="11">November</option>
        <option value="12">December</option>
    </select>
    <label for="year">År:</label>
    <input type="number" name="year" id="year" placeholder="År">
    <label for="amountOfMonthsShown">Antal måneder:</label>
    <input type="number" id="amountOfMonthsShown" placeholder="Antal måneder vist">
</form>

<button type="button" id="toggleWeeks" class="toggledAvail">Se timer brugt</button>
<div>
    <table class="table table-light" id="opgaveloserTable">
        <thead>
            <tr id="firstHead">
                <th colspan="1"></th>
            </tr>
            <tr id="secondHead">
                <th class="pointer">Opgaveløser</th>
            </tr>
        </thead>
        <tbody>
            {{#each opgaveloser}}
            <tr id="opgaveloserRow" class="opgaveloser">
                <input type="hidden" id="{{@index}}" idName="opgaveloserId" value={{this.opgaveloserId}}>
                <input type="hidden" id="{{@index}}" idName="arbejdstidPrUge" value={{this.arbejdstidPrUge}}>
                <td value={{this.opgaveloserId}}>{{this.fornavn}} {{this.efternavn}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


<script src="/js/clientbemandingsoversigt.js"></script>