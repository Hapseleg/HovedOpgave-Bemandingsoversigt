<form method="POST" id="profilform">
    <div class="row">
        <div class="col-lg"> 
            <h1>Opret {{viewName}}</h1>
            <h2>Information</h2>
            <div class="input-group mb-3">
                
                <div class="form-group formArea">
                    <label for="fornavn">Fornavn</label>
                    <input type="text" class="form-control" id="fornavn" name="fornavn">

                    <label for="efternavn">Efternavn</label>
                    <input type="text" class="form-control" id="efternavn" name="efternavn">

                    <label for="lokationId">lokation</label>
                    <select name="lokationId" form="profilform">
                        {{!-- <option value="1">Aarhus</option> --}}
                        {{#each lokation}}
                            <option value={{this.lokationId}}>{{this.lokationNavn}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <h2>Arbejdsdage</h2>
            <div class="input-group mb-3">
                
                <div class="form-group formArea" id="arbejdsdage">
                    {{#each days}}
                         <div>
                            <label>{{this.name}}</label>
                            <input type="checkbox" id="{{this.name}}" value="{{this.id}}">
                            <input type="time" id="dagStart" value="08:00">
                            <input type="time" id="dagSlut" value="15:00">


                            <input type="hidden" id="dagHidden">
                            <input type="hidden" id="dagStartHidden">
                            <input type="hidden" id="dagSlutHidden">
                        </div>
                    {{/each}}

                    <label for="arbejdstidPrUge">arbejdstidPrUge</label>
                    <input type="number" step="0.5" name="arbejdstidPrUge">
                </div>
            </div>
        </div>

    </div>
    <div class="row formArea">
        <div class="col-md"> 
            <h2>KonsulentProfil</h2>
            <div class="input-group mb-3">
                <div class="form-group">
                    <select id="konsulentProfil" form="profilform">
                        {{!-- <option value="1">navn</option> --}}
                        {{#each konsulentProfiler}}
                            <option value={{this.konsulentProfilId}}>{{this.konsulentProfilNavn}}</option>
                        {{/each}}
                    </select>
                    <label for="konsulentProfilWeight">Arbejde med 1-100</label>
                    <input type="number" step="10" class="form-control" id="konsulentProfilWeight">
                </div>
            </div>
            <button type="button" id="addKonsulentProfil">Tilf√∏j</button>
        </div>
        <div class="col-lg"> 
            <div class="form-group">
                <h2>Valgte konsulentprofiler</h2>
                <table class="table table-light" id="konsulentProfiler" style="max-height: 300px">
                    <thead>
                        <tr>
                            <th scope="col">Konsulentprofil</th>
                            <th scope="col">1-100%</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{!-- {{#each konsulentProfiler}}
                            <tr value={{this.konsulentProfilId}}>
                                <td>{{this.konsulentProfilNavn}}</td>
                                <td>{{this.konsulentProfilWeight}}</td>
                            </tr>
                        {{/each}} --}}
                    </tbody>
                </table>
                <button type="button" onclick="removeKonsulentProfiler()">Fjern valgte konsulentprofiler</button>
            </div>

        </div>
    </div>
    <div class="form-group">
        <button type="button" id="submitknap" class="btn btn-success">Opret {{viewName}}</button>
    </div>
    
</form>





 <script src="/js/clientopgaveloser.js"></script>