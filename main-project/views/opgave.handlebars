        </div>

        {{!-- col 3 --}}
        <div class="col">
            <div class="form-group row">
                <h2>Valgte opgaveløsere</h2>
            </div>
            <div class="form-control row">
                <div>
                    <table class="table table-light" id="valgteOpgavelosere">
                        <thead>
                            <tr>
                                {{!-- <th scope="col">Id</th> --}}
                                <th scope="col">Navn</th>
